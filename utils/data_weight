    [0.4493, 0.3500, 0.1464, 0.0399, 0.0144, 0.0319]   # Tucumán
]

# Función para obtener el peso de un partido en una provincia específica
def obtener_peso(provincia, partido):
    indice_provincia = provincias.index(provincia)
    indice_partido = partidos.index(partido)
    return matriz_pesos[indice_provincia][indice_partido]

# Ejemplo de uso:
print(obtener_peso("Ciudad Autónoma de Buenos Aires", "Unión por la Patria"))  # Imprime el peso de "Unión por la Patria" en Ciudad Autónoma de Buenos Aires
