    [0.5231, 0.2906, 0.1538, 0.0244, 0.0081, 0.0188],  # Entre Ríos
    [0.3236, 0.3735, 0.1996, 0.0679, 0.0354, 0.0240],  # Formosa
    [0.3486, 0.3351, 0.2190, 0.0744, 0.0229, 0.0183],  # Jujuy
    [0.4114, 0.3763, 0.1180, 0.0851, 0.0092, 0.0226],  # La Pampa
    [0.2401, 0.4238, 0.2582, 0.0432, 0.0347, 0.0303],  # La Rioja
