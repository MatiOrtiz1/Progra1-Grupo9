from .data_storage import obtener_datos
from .functions import candidatos

# Lista de provincias 
provincias = [
    "Buenos Aires", "Ciudad Autónoma de Buenos Aires", "Catamarca", "Chaco", "Chubut", 
    "Córdoba", "Corrientes", "Entre Ríos", "Formosa", "Jujuy", "La Pampa", "La Rioja",
    "Mendoza", "Misiones", "Neuquén", "Río Negro", "Salta", "San Juan", "San Luis",
    "Santa Cruz", "Santa Fe", "Tierra del Fuego", "Tucumán"
]

# Lista de partidos
partidos = [
    "Unión por la Patria", "La Libertad Avanza", "Juntos por el Cambio",
    "Hacemos por nuestro país", "Frente de Izquierda", "Blancos / nulos"
]

# Matriz de pesos en formato decimal (cada fila corresponde a una provincia y cada columna a un partido)
# Los pesos están en formato decimal (0.0-1.0)
matriz_pesos = [
    [0.4283, 0.3203, 0.1713, 0.0644, 0.0158, 0.0780],  # Buenos Aires
    [0.3218, 0.1998, 0.4123, 0.0397, 0.0353, 0.0250],  # Ciudad Autónoma de Buenos Aires
    [0.4367, 0.2782, 0.2410, 0.0362, 0.0078, 0.0164],  # Catamarca
    [0.3222, 0.3513, 0.2057, 0.0770, 0.0438, 0.0285],  # Chaco
    [0.1342, 0.3358, 0.2263, 0.2898, 0.0139, 0.0162],  # Chubut
